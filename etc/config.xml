 <config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <jnodwell_twitterfeed>
            <twitterfeed_settings>
                <followid>Heilind</followid>
                <datawidth>350</datawidth>
                <dataheight>600</dataheight>
                <color>light</color>
                <link_color>#3B94D9</link_color>
            </twitterfeed_settings>
            <twitterfeed_button>
                <showbutton>true</showbutton>
                <datasize>large</datasize>
                <datashowscreen>true</datashowscreen>
                <datashowcount>false</datashowcount>
            </twitterfeed_button>
            <twitterfeed_mention>
                <showbutton>true</showbutton>
                <mentionsize>large</mentionsize>
                <prefill>Hey, @Heilind </prefill>
                <rec_one></rec_one>
                <rec_two></rec_two>
            </twitterfeed_mention>
        </jnodwell_twitterfeed>
    </default>
</config>